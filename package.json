{
  "name": "juice",
  "version": "1.0.0",
  "exports": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "typings": "./lib/typings/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:typings",
    "build:esm": "esbuild src/index.ts --bundle --platform=neutral --format=esm --minify --outfile=lib/esm/index.js",
    "build:cjs": "esbuild src/index.ts --bundle --platform=neutral --format=cjs --minify --outfile=lib/cjs/index.js",
    "build:typings": "tsc -p ./tsconfig.typings.json",
    "clean": "rimraf ./lib",
    "code:lint": "prettier --check . && eslint .",
    "code:fix": "prettier --write . && eslint . --fix"
  },
  "author": "Vladimir Lewandowski <me@vovaspace.com> (https://vovaspace.com/)",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "esbuild": "^0.8.43",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  }
}
