  "main": "./lib/cjs/index.js",
  "module": "./lib/esm5/index.js",
  "typings": "./lib/types/index.d.ts",
  "scripts": {
    "start": "npm run clean && tsc -w -p ./tsconfig.json",
    "build": "npm run clean && npm run build:cjs && npm run build:es2015 && npm run build:types",
